<MDProgressBar>
	size_hint: 1, .005
	pos_hint: {'top': 1}#, 'left': 1}

<MDCarousel>
	size_hint: 1, .995

<ScreenLayout@MDBoxLayout>
	size_hint: 1, 1
	pos_hint: {'center': (.5, .5)}
	orientation: "vertical"
	padding: 20
	spacing: 10

<TopLabel@MDLabel>
	size_hint: 1, .2
	halign: "center"
	bold: False
	font_style: "H5"

<IconButton@MDIconButton>
	size_hint: 1, .3
	pos_hint: {'center': (.5, .5)}
	halign: "center"
	icon_size: "128sp"
	theme_icon_color: "Custom"

<MDScrollView>
	size_hint: 1,.7

<TwoColumns@MDGridLayout>
	size_hint: 1,.4
	pos_hint: {'center': (.5, .5)}
	cols: 2
	spacing: [10,20]

<DropdownLabel@MDLabel>
	size_hint: None, 1
	width: "256sp"
	pos_hint: {'center': (.5, .5)}

<IconListItem>
    IconLeftWidget:
		pos_hint: {'center_x': .5, 'center_y': .5}
        icon: root.icon

<Dropdown@MDDropDownItem>
	size_hint: 1, 1
	pos_hint: {'center_x': .5, 'center_y': .1}

<Textfield@MDTextField>

<MDFillRoundFlatIconButton>
	size_hint:1,.1
	pos_hint: {'center': (.5, .5)}
	md_bg_color: app.theme_cls.primary_color

<MDTopAppBar>
	size_hint:1,.1

<MDNavigationLayout>
	size_hint:1,.9

<ContentNavigationDrawer>
	MDList:
		size_hint: 1,1
		OneLineListItem:
			id: menuFeedback
			text: app.text.get("menuFeedback")
			on_press:
				root.nav_drawer.set_state("close")
				root.screen_manager.current = "surveyScreen"
		OneLineListItem:
			id: menuEvaluate
			text: app.text.get("menuEvaluate")
			on_press:
				root.nav_drawer.set_state("close")
				root.screen_manager.current = "adminScreen"

MDScreen:
	on_touch_down: app.timeout_handler()
	MDTopAppBar:
		elevation: 0
		pos_hint: {"top": 1}
		left_action_items:
			[['menu', lambda x: nav_drawer.set_state("open")]]
		right_action_items:
			[['arrow-up-drop-circle-outline', lambda x: surveyCarousel.load_previous() if screen_manager.current == "surveyScreen" else adminCarousel.load_previous()],['arrow-down-drop-circle-outline', lambda x: surveyCarousel.load_next() if screen_manager.current == "surveyScreen" else adminCarousel.load_next()]]

	MDNavigationLayout:
		MDScreenManager:
			id: screen_manager
			MDScreen:
				name: "surveyScreen"
				MDProgressBar:
					id: progressBar
					color: app.theme_cls.accent_color
				MDCarousel:
					id: surveyCarousel
					direction: 'bottom'
					on_slide_complete: progressBar.value = 100 / (len(self.slides) - 1) * self.slides.index(self.current_slide)
					on_slide_complete: app.timeout_handler("stop") if self.slides.index(self.current_slide) == 0 else app.timeout_handler() 
					on_slide_complete: app.save_inputs()
					# general
					ScreenLayout:
						TopLabel:
							id: welcomeLabel
							text: app.text.get("welcomeLabel")
						IconButton:
							icon: "emoticon-happy-outline"
							icon_color: (0,.5,0,1)
							on_release: app.initialRating = 2
							on_release: surveyCarousel.load_next()
						IconButton:
							icon: "emoticon-neutral-outline"
							icon_color: (1,.64,0,1)
							on_release: app.initialRating = 1
							on_release: surveyCarousel.load_next()
						IconButton:
							icon: "emoticon-sad-outline"
							icon_color: (1,0,0,1)
							on_release: app.initialRating = 0
							on_release: surveyCarousel.load_next()
						Dropdown:
							id: languageSelection
							text: app.text.selectedLanguage
							on_release: app.languageDropdown["languageSelection"].open()
							on_text: app.translate(self.text)
					# initial gratitude and encouragement to continue
					ScreenLayout:
						TopLabel:
							id: encouragementLabel
							text: app.text.get("encouragementLabel")
						MDScrollView:
							MDLabel:
								id: encouragementText
								text: app.text.get("encouragementText")
						MDFillRoundFlatIconButton:
							id: encouragementYes
							icon: "thumb-up-outline"
							text: app.text.get("encouragementYes")
							on_release: surveyCarousel.load_next()
						MDFillRoundFlatIconButton:
							id: encouragementNo
							icon: "exit-to-app"
							text: app.text.get("encouragementNo")
							on_release: surveyCarousel.load_slide(surveyCarousel.slides[len(surveyCarousel.slides)-1])
					# 4 more specific questions
					ScreenLayout:
						TopLabel:
							id: detailratingLabel
							text: app.text.get("detailratingLabel")
						TwoColumns:
							DropdownLabel:
								id: detailratingAvailability
								text: app.text.get("detailratingAvailability")
							Dropdown:
								id: detailratingQone
								text: app.text.get("detailratingSelect")
								on_release: app.ratingDropdown["detailratingQone"].open()
							DropdownLabel:
								id: detailratingProcessing
								text: app.text.get("detailratingProcessing")
							Dropdown:
								id: detailratingQtwo
								text: app.text.get("detailratingSelect")
								on_release: app.ratingDropdown["detailratingQtwo"].open()
							DropdownLabel:
								id: detailratingExpertise
								text: app.text.get("detailratingExpertise")
							Dropdown:
								id: detailratingQthree
								text: app.text.get("detailratingSelect")
								on_release: app.ratingDropdown["detailratingQthree"].open()
							DropdownLabel:
								id: detailratingKindness
								text: app.text.get("detailratingKindness")
							Dropdown:
								id: detailratingQfour
								text: app.text.get("detailratingSelect")
								on_release: app.ratingDropdown["detailratingQfour"].open()
						TwoColumns:
					# specificially good
					ScreenLayout:
						TopLabel:
							id: commendationLabel
							text: app.text.get("commendationLabel")
						Textfield:
							id: commendation
							hint_text: app.text.get("textHint")
							multiline: True
							size_hint: 1, 1
					# specificially bad
					ScreenLayout:
						TopLabel:
							id: suggestionLabel
							text: app.text.get("suggestionLabel")
						Textfield:
							id: suggestion
							hint_text: app.text.get("textHint")
							multiline: True
							size_hint: 1, 1
					# received service
					ScreenLayout:
						TopLabel:
							id: serviceLabel
							text: app.text.get("serviceLabel")
						Textfield:
							id: service
							hint_text: app.text.get("textHint")
							multiline: True
							size_hint: 1, 1
					# final gratitude
					ScreenLayout:
						TopLabel:
							id: thankyouLabel
							text: app.text.get("thankyouLabel")
						IconButton:
							icon: "heart"
							size_hint: 1, 1
							icon_color: (.97, .65, .97, 1)
						MDFillRoundFlatIconButton:
							id: thankyouRestart
							icon: "restart"
							text: app.text.get("thankyouRestart")
							on_release: app.restart()
							on_release: surveyCarousel.load_slide(surveyCarousel.slides[0])
			MDScreen:
				name: "adminScreen"
				MDCarousel:
					id: adminCarousel
					direction: 'bottom'
					ScreenLayout:
						MDTextField:
							id: adminPass
							hint_text: app.text.get("adminPass")
							password: bool(app.database.password)
						MDFillRoundFlatIconButton:
							id: buttonPassword
							icon: "key-variant"
							text: app.text.get("buttonPassword")
							disabled: bool(app.database.password)
							on_release: adminPass.text = "" if app.database.write("SETTING", {"KEY": "password", "VALUE": adminPass.text}) else adminPass.text
							on_release: app.notif(app.text.get("resetMessage"))
						MDFillRoundFlatIconButton:
							id: buttonExport
							icon: "database-export-outline"
							text: app.text.get("buttonExport")
							disabled: adminPass.text != app.database.password or not app.database.password
							on_release: app.report()
							on_release: adminPass.text = ""
						MDFillRoundFlatIconButton:
							id: buttonReset
							icon: "delete-forever-outline"
							text: app.text.get("buttonReset")
							disabled: adminPass.text != app.database.password or not app.database.password
							on_release: app.cancel_confirm_dialog(app.text.get("buttonReset"), app.text.get("cancelReset"), app.text.get("confirmReset"))
							on_release: adminPass.text = ""
						MDScrollView:
							MDLabel:
								id: devInfo
								text: app.text.get("devInfo")
					ScreenLayout:
						MDTextField:
							id: adminPassTwo
							hint_text: app.text.get("adminPass")
							password: True
						

		MDNavigationDrawer:
			id: nav_drawer
			radius: (0, 16, 16, 0)
			ContentNavigationDrawer:
				screen_manager: screen_manager
				nav_drawer: nav_drawer
